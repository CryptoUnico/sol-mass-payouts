{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "warn",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": "off",
    "max-line-length": [
      "error",
      150
    ]
  },
  "plugins": [
    "prettier"
  ]
}